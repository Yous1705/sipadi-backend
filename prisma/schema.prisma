generator client {
  provider     = "prisma-client-js"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  TEACHER
  ADMIN
}

enum AttendanceStatus {
  HADIR
  IZIN
  SAKIT
  ALPHA
}

enum AssignmentStatus{
  DRAFT
  PUBLISHED
  CLOSED
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role
  isActive Boolean @default(true)

  attendances Attendance[] @relation("AttendanceStudent")
  createdAttendances Attendance[] @relation("AttendanceCreatedby")
  gradedSubmissions Submission[] @relation("SubmissionGradedBy")

  homeroomClasses Class[]  @relation("HomeroomTeacher")
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  classId Int?
  class   Class? @relation("StudentClass", fields: [classId], references: [id])

  teachingAssigment TeachingAssigment[]
  submissions       Submission[]
}

model Class {
  id   Int    @id @default(autoincrement())
  name String
  year Int
  isActive Boolean @default(true)

  homeroomTeacherId Int?
  homeroomTeacher   User?    @relation(name: "HomeroomTeacher", fields: [homeroomTeacherId], references: [id])
  createdAt         DateTime @default(now())

  students          User[]              @relation("StudentClass")
  teachingAssigment TeachingAssigment[]
}

model Subject {
  id        Int      @id @default(autoincrement())
  name      String
  createdAt DateTime @default(now())

  teachingAssigment TeachingAssigment[]
}

model Attendance {
  id     Int              @id @default(autoincrement())

  status AttendanceStatus
  note   String?

  studentId Int
  student   User @relation("AttendanceStudent",fields: [studentId], references: [id])

  teachingAssigmentId Int
  teachingAssigment   TeachingAssigment @relation(fields: [teachingAssigmentId], references: [id])

  attendanceSessionId Int
  attendanceSession AttendanceSession @relation(fields: [attendanceSessionId], references: [id])

  createById Int
  createdBy User @relation("AttendanceCreatedby",fields: [createById], references: [id])

  createdAt           DateTime          @default(now())

  @@unique([studentId, attendanceSessionId])
}

model AttendanceSession{
  id Int @id @default(autoincrement())

  teachingAssigmentId Int
  teachingAssigment   TeachingAssigment @relation(fields: [teachingAssigmentId], references: [id])

  openAt DateTime
  closeAt DateTime
  isActive Boolean @default(true)

  createdAt DateTime @default(now())

  attendances Attendance[]
}

model Assignment {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  dueDate     DateTime
  status AssignmentStatus @default(DRAFT)
  deletedAt DateTime?

  teachingAssigmentId Int
  teachingAssigment   TeachingAssigment @relation(fields: [teachingAssigmentId], references: [id])

  submissions         Submission[]
  createdAt           DateTime          @default(now())
  updatedAt DateTime @updatedAt
}

model TeachingAssigment {
  id        Int  @id @default(autoincrement())
  teacherId Int
  teacher   User @relation(fields: [teacherId], references: [id])

  classId Int
  class   Class @relation(fields: [classId], references: [id])

  subjectId Int
  subject   Subject @relation(fields: [subjectId], references: [id])

  createdAt DateTime @default(now())

  assignment  Assignment[]
  attendances Attendance[]
  attendanceSession AttendanceSession[]

  @@unique([teacherId, classId, subjectId])
}

model Submission {
  id       Int     @id @default(autoincrement())
  fileUrl  String
  score    Int?
  feedback String?
  createdAt  DateTime @default(now())

  assignmentId Int
  assignment   Assignment @relation(fields: [assignmentId], references: [id])

  studentId Int
  student   User @relation(fields: [studentId], references: [id])

  gradedById Int?
  gradedBy User? @relation("SubmissionGradedBy", fields: [gradedById], references:[id])

  submittedAt DateTime @default(now())
  @@unique([studentId, assignmentId])
}
